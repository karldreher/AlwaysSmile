{

  "manifest_version": 2,
  "name": "AlwaysSmile",
  "version": "1.3",
 
  "description": "Redirects Amazon.com to smile.amazon.com.  This helps you always donate part of your purchase by purchasing at smile.amazon.com!",
  "icons": {
    "48": "icon-48.png",
	"128": "icon-128.png"
  },

  "applications": {
    "gecko": {
      "id": "alwayssmile@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "background": {
    "scripts": ["smile.js"]
  },

  "permissions": [ 
    "webRequest", "webRequestBlocking", "https://www.amazon.com/*", "https://www.amazon.de/*", "https://www.amazon.co.uk/*"
  ]


}
